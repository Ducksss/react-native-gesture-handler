{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "noStrictGenericChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitUseStrict": false,

    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.js"]
}